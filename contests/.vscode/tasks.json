{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "g++ build active file",
      "command": "/opt/homebrew/bin/g++",
      "args": [
        "-std=c++23",
        "-g",
        "-Wall",
        "-Wextra",
        "-Wshadow",
        "-fsanitize=address,undefined",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-I",
        "../ac-library/atcoder/"
      ],
      "options": {
        "cwd": "${fileDirname}/"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "CheckTestCase",
      "type": "shell",
      "command": "cd ${fileDirname} && g++ -std=gnu++23 -Wl,-ld_classic ${fileBasename} -o ${fileBasenameNoExtension} && oj test -c \"${fileDirname}/${fileBasenameNoExtension}\" -d ${fileDirname}/test/",
      "presentation": {
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "SubmitCode",
      "type": "shell",
      "command": "cd ${fileDirname} && acc submit ${fileBasename} -- -l 5028 -y",
      "presentation": {
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    }
  ]
}